<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/friend_request_sender_id"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/friend_request_sender_name"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="Lorena Sopčić"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/friend_request_sent_time"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_below="@+id/friend_request_sender_name"
            android:text="2020-12-30" />

        <ImageButton
            android:id="@+id/accept_friend_request_button"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:src="@drawable/ic_confirm" />

        <ImageButton
            android:id="@+id/deny_friend_request_button"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:src="@drawable/ic_close_black_24dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>