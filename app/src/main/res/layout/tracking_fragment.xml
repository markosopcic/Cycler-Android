<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.TrackingFragment">

    <Switch
        android:id="@+id/liveTrackingSwitch"
        android:layout_width="158dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="14dp"
        android:text="Live Tracking"
        android:textAlignment="viewStart" />

    <ImageButton
        android:id="@+id/startTrackingButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="489dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_start_tracking_outline_black_24dp" />

    <Switch
        android:id="@+id/trackEventSwitch"
        android:layout_width="170dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="13dp"
        android:text="Track Event"
        android:textAlignment="viewStart" />

    <Spinner
        android:id="@+id/eventSelector"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="13dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/events" />

    <ImageButton
        android:id="@+id/stop_tracking_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_stop_tracking_24dp" />

</RelativeLayout>