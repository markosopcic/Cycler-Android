<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.TrackingFragment">

    <Switch
        android:id="@+id/liveTrackingSwitch"
        android:layout_width="158dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="14dp"
        android:text="Live Tracking"
        android:textAlignment="viewStart" />

    <ImageButton
        android:id="@+id/startTrackingButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="489dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_start_tracking_outline_black_24dp" />

    <Switch
        android:id="@+id/trackEventSwitch"
        android:layout_width="170dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="13dp"
        android:text="Track Event"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/selected_event"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="13dp" />

    <ImageButton
        android:id="@+id/stop_tracking_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_stop_tracking_24dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/trackingTimeTracker"
        android:layout_width="154dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/distanceMovedView"
        android:layout_width="193dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:textSize="30sp" />

</RelativeLayout>